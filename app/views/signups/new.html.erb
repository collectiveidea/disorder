<h1>Sign Up!</h1>

<%= form_for @signup do |form| %>

  <p>
    <%= form.label :company_name %>
    <%= form.text_field :company_name %>
  </p>
  
  <p>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </p>

  <p>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </p>

  <p>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.submit "Sign Up!" %>
  </p>

<% end %>